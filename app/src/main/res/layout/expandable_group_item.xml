<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/set_item_height"
    android:background="@drawable/list_1">
    <TextView
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/set_groupname_marginLeft"
        android:textSize="@dimen/set_groupname_fontsize" >
    </TextView>

    <ImageView
        android:id="@+id/jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/set_jiantou_marginRight"
        android:contentDescription="@string/app_name" >
    </ImageView>
    </RelativeLayout>
</RelativeLayout>