<?xml version="1.0" encoding="utf-8"?>
<!-- 视频会议视频展示布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="1dip" >

    <RelativeLayout
        android:id="@+id/fl_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/monitor_bg" >

        <FrameLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </FrameLayout>


        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/rl_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent">

            <TableLayout
                android:id="@+id/tl_title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/monitor_info_bg"
                android:padding="5dp"
                android:stretchColumns="1" >

                <TableRow android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_monitor_name"
                        android:textColor="@color/contact_title_selected"
                        android:textSize="18.0dip" />

                    <TextView
                        android:id="@+id/tv_namevl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18.0dip" />
                </TableRow>

                <TableRow android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_monitor_no"
                        android:textColor="@color/contact_title_selected"
                        android:textSize="18.0dip" />

                    <TextView
                        android:id="@+id/tv_novl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18.0dip" />
                </TableRow>

                <TableRow android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_monitor_date"
                        android:textColor="@color/contact_title_selected"
                        android:textSize="18.0dip" />

                    <TextView
                        android:id="@+id/tv_datevl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="18.0dip" />
                </TableRow>

                <TableRow android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_monitor_duration"
                        android:textColor="@color/contact_title_selected"
                        android:textSize="18.0dip" />

                    <Chronometer
                        android:id="@+id/ch_durationvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@android:color/white"
                        android:textSize="18.0dip" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>